<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h3>Edit the Listing</h3>
    <br />
    <form
      method="POST"
      action="/listings/<%= currListing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title : </label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          value="<%= currListing.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Enter a valid title!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description : </label>
        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          required
        >
  <%= currListing.description %></textarea
        >
        <div class="invalid-feedback">
          Please write a short description about listing
        </div>
      </div>

      <div class="mb-3">
        Original listing image : <br />
        <img
          src="<%= originalImageUrl %>"
          alt="<%= currListing.image.filename %>"
        />
      </div>

      <div class="mb-3">
        <label for="image-url" class="form-label">Upload new Image : </label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>

      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Listed Price : </label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            required
            value="<%= currListing.price %>"
          />
          <div class="invalid-feedback">Please insert a valid price</div>
        </div>
        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country : </label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            required
            value="<%= currListing.country %>"
          />
          <div class="invalid-feedback">Enter valid country name!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="category">Category :</label>
        <select class="form-select" name="listing[category]">
          <option selected value="<%= currListing.category %>">
            <%= currListing.category %>
          </option>
          <option value="rooms">Rooms</option>
          <option value="iconic cities">Iconic cities</option>
          <option value="mountains">Mountains</option>
          <option value="beachfront">Beachfront</option>
          <option value="pools">Pools</option>
          <option value="castles">Castles</option>
          <option value="camping">Camping</option>
          <option value="farms">Farms</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location : </label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          required
          value="<%= currListing.location %>"
        />
        <div class="invalid-feedback">
          Please provide the listing's location
        </div>
      </div>

      <button class="btn btn-dark edit-btn">Confirm Edits</button>
      <br /><br /><br />
    </form>
  </div>
</div>
